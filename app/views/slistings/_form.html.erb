<div class="container-fluid">
<div class="row">
  <div class="col-md-10 col-md-offset-2">
        <h2 class="page-header"><p><i class="fa fa-building-o fa-2x fa-fw"></i>New Sale Listing</p>
     </div>
   </div>

<div class="row">
  <div class="col-xs-6 col-md-3 col-md-offset-2">
<%= form_for @slisting, html: { multipart: true } do |f| %>
  <% if @slisting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@slisting.errors.count, "error") %> prohibited this slisting from being saved:</h2>

      <ul>
      <% @slisting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :size %><br>
    <%= f.text_field :size %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  </div>
  <div class="col-xs-6 col-md-3">
  <div class="field">
    <%= f.label :building_type %><br>
    <%= f.text_field :building_type %>
  </div>
  <div class="field">
    <%= f.label :building_class %><br>
    <%= f.text_field :building_class %>
  </div>
  <div class="field">
    <%= f.label :sale_type %><br>
    <%= f.text_field :sale_type %>
  </div>
  <div class="field">
    <%= f.label :floors %><br>
    <%= f.text_field :floors %>
  </div>
  </div>
  <div class="col-xs-6 col-md-3">
  <div class="field">
    <%= f.label :parking_ratio %><br>
    <%= f.text_field :parking_string %>
  </div>
  <div class="field">
    <%= f.label :brokerage %><br>
    <%= f.text_field :brokerage %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form_control" %>
  </div>
  <div class ="row top-buffer">
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %>
</div>
</div>
</div>
