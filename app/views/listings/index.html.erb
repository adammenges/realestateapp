
<div class="container-fluid">
      <div class="row">
        <div class="col-md-2 sidebar">
          <div class="row placeholders">
          
          <img src="http://www.ccareynkf.com/FileStore/IMG/Agt_59B4875E12004ED397A4A176FE35AD46.jpg" width="130" height="130" class="img-circle"/>
            <h4>Jason Forcier</h4>
              <span class="text-muted">Cornish & Carey</span>
            </div>
          <%= render 'layouts/navbarside' %>
          </div>

          <div class="row">
        <div class="col-md-10 col-md-offset-2">

<h1>Lease Listings </h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th></th>
      <th><%= sort_link @search, :agent, "Agent Name" %></th>
      <th><%= sort_link @search, :city, "City" %></th>
      <th>Address</th>
      <th>Suite</th>
      <th>Size</th>
      <th>Style</th>
      <th>Class</th>
      <th>Lease Type</th>
      <th><%= sort_link @search, :asking_Rate, "Asking Rate" %></th>
      <th>Opex</th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= image_tag listing.image.url(:thumb) %></td>
        <td><small><%= listing.user.name if listing.user %></small></td>
        <td><small><%= listing.city %></small></td>
        <td><small><%= listing.address %></small></td>
        <td><small><%= listing.suite %></small></td>
        <td><small><%= listing.size %></small></td>
        <td><small><%= listing.building_type %></small></td>
        <td><small><%= listing.building_class %></small></td>
        <td><small><%= listing.lease_type %></small></td>
        <td><small><%= listing.asking_rate %></small></td>
        <td><small><%= listing.opex %></small></td>
        <td><%= link_to 'Show', detail_path %></td>
        <% if listing.user == current_user %>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>

    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Lease Listing', new_listing_path %>
<% end %>
</div>
</div>
