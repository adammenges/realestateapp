<div class="row">
  <div class="col-md-12"><%= render 'layouts/nav' %></div>
 </div>
	<div class="row">
		<%= render 'layouts/dbsearch' %></div>

<div class="row top-buffer">
  <div class="container">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Search Lease Comps</h3>
        </div>
      <div class="panel-body">


<%= search_form_for @search do |f| %>

<!-- City Search -->
<div class="row top-buffer">
  <div class="field-group">
    <div class="col-sm-1">
    <%= f.label :city_cont, "City" %>
</div>
  <div class="col-md-3">
    <%= f.text_field :city_cont %>
</div>
  </div>
</div>

 <!-- Building Type -->
 <div class="row top-buffer">
  <div class="field-group">
    <div class="col-sm-1">
    <%= f.label :address_cont, "Address" %>
</div>
<div class="col-md-4">
    <%= f.text_field :address_cont %>
</div>
  </div>
</div>

<!-- Size (sf) -->
<div class="row top-buffer">
  <div class="field-group">
    <div class="col-sm-1">
    <%= f.label :size_gteq, "Minimum Size (sf)" %>
</div>
<div class="col-sm-2">
    <%= f.text_field :size_gteq %>
  </div>
    <%= f.label :size_lteq, "Maximum Size (sf)" %>
    <%= f.text_field :size_lteq %>
  </div>
</div>

<!-- Effective Rate -->
  <div class="row top-buffer">
   <div class="field-group">
    <div class="col-sm-1">
      <%= f.label :effective_rate_gteq, "Minimum Rate ($)" %>
  </div>
  <div class="col-sm-2">
      <%= f.text_field :effective_rate_gteq %>
  </div>

      <%= f.label :effective_rate_lteq, "Maximum Rate ($)" %>
      <%= f.text_field :effective_rate_lteq %>
    </div>
</div>

<!-- Lease Start -->
  <div class="row top-buffer">
   <div class="field-group">
    <div class="col-sm-1">
      <%= f.label :lease_start_gteq, "Earliest Start" %>
  </div>
  <div class="col-sm-2">
      <%= f.date_field :lease_start_gteq %>
  </div>
      <%= f.label :lease_start_lteq, "Latest Start" %>
      <%= f.date_field :lease_start_lteq %>
    </div>
</div>

<!-- Lease Expiration -->
  <div class="row top-buffer">
   <div class="field-group">
    <div class="col-sm-1">
      <%= f.label :lease_expiration_gteq, "Earliest Expiration" %>
  </div>
  <div class="col-sm-2">
      <%= f.date_field :lease_expiration_gteq %>
  </div>
      <%= f.label :lease_expiration_lteq, "Latest Expiration" %>
      <%= f.date_field :lease_expiration_lteq %>
    </div>
</div>

  <!-- Tenant -->
  <div class="row top-buffer">
  <div class="field-group">
    <div class="col-sm-1">
    <%= f.label :tenant_cont, "Tenant" %>
</div>
<div class="col-md-4">
    <%= f.text_field :tenant_cont %>
</div>
</div>
</div>

  <!-- Landlord -->
  <div class="row top-buffer">
  <div class="field-group">
    <div class="col-sm-1">
    <%= f.label :landlord_cont, "Landlord" %>
</div>
<div class="col-md-4">
    <%= f.text_field :landlord_cont %>
</div>
</div>
</div>




<!-- Search Button -->
  <div class="actions">
    <%= f.submit "Search" %></div>
<% end %>

</div>
</div>
</div>

    