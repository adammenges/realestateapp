<div class="row">
  <div class="col-md-12"><%= render 'layouts/nav' %></div>
 </div>
	<div class="row">
		<%= render 'layouts/dbsearch' %></div>


	<div class="container">
		<div class="col-md-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Search Buildings for Lease</h3>
				</div>
			<div class="panel-body">


<%= search_form_for @search do |f| %>

<!-- City Search -->
<div class="row top-buffer">
  <div class="field-group">
  	<div class="col-sm-2">
    <%= f.label :city_cont, "City" %>
</div>
	<div class="col-md-3">
    <%= f.text_field :city_cont %>
</div>
  </div>
</div>

 <!-- Building Type -->
 <div class="row top-buffer">
  <div class="field-group">
  	<div class="col-sm-2">
    <%= f.label :building_type_cont, "Building Type" %>
</div>
<div class="col-md-4">
    <%= f.text_field :building_type_cont %>
</div>
  </div>
</div>

  <!-- Building Class -->
  <div class="row top-buffer">
  <div class="field-group">
  	<div class="col-sm-2">
    <%= f.label :building_class_cont, "Building Class" %>
</div>
<div class="col-md-4">
    <%= f.text_field :building_class_cont %>
</div>
</div>
</div>

<!-- Size (sf) -->
<div class="row top-buffer">
  <div class="field-group">
  	<div class="col-sm-2">
    <%= f.label :size_gteq, "Minimum Size (sf)" %>
</div>
<div class="col-sm-2">
    <%= f.text_field :size_gteq %>
  </div>
    <%= f.label :size_lteq, "Maximum Size (sf)" %>
    <%= f.text_field :size_lteq %>
  </div>
</div>
  <!-- Asking Rate -->
  <div class="row top-buffer">
   <div class="field-group">
   	<div class="col-sm-2">
      <%= f.label :asking_rate_gteq, "Minimum Rate ($)" %>
  </div>
  <div class="col-sm-2">
      <%= f.text_field :asking_rate_gteq %>
  </div>
      <%= f.label :asking_rate_lteq, "Maximum Rate ($)" %>
      <%= f.text_field :asking_rate_lteq %>
    </div>
</div>

<!-- Search Button -->
  <div class="actions">
  	<%= f.submit "Search" %></div>
<% end %>

</div>
</div>
</div>

		